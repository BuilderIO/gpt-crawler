{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "lib": ["DOM"],
    "strict": true,
  },
  "include": ["./src/**/*", "config.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}
